set runtimepath^=~/.vim/bundle/ctrlp.vim
set runtimepath^=~/.vim/bundle/nerdtree.vim
set runtimepath^=~/.vim/bundle/rails.vim
set runtimepath^=~/.vim/bundle/snipMate.vim

" note:set smart indent 
set si
" note:set tabstop=2
set ts=2
" note:expand tab to space
set et

" set line number
set number

" MAP F8 to start plugin NERDTree
map<F8> :NERDTree<CR>

imap <C-S> <C-C>:w<CR>
